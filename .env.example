# Application Settings
APP_NAME=MyPersonalMap
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Database Configuration
DATABASE_URL=mysql+pymysql://mypersonalmap_user:your_password_here@localhost:3306/mypersonalmap
DB_ECHO=false

# Security
SECRET_KEY=your-secret-key-change-this-min-32-characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# API Settings
API_V1_PREFIX=/api/v1
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Geocoding
GEOCODING_PROVIDER=nominatim
GEOCODING_USER_AGENT=MyPersonalMap/1.0
GEOCODING_RATE_LIMIT_SECONDS=1
# GOOGLE_MAPS_API_KEY=your-google-api-key-here

# File Upload
MAX_UPLOAD_SIZE_MB=50
ALLOWED_IMPORT_FORMATS=gpx,kml,geojson,csv

# Features Flags
ENABLE_WEB_SCRAPING=false
ENABLE_STATISTICS=true
ENABLE_SHARING=true
